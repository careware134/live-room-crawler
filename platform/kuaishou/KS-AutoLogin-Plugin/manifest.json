{
  "manifest_version": 2,
  "name": "KS Auto Login",
  "version": "2.0",
  "permissions": [
    "webRequest",
    "webRequestAuthProvider",
    "declarativeWebRequest",
    "declarativeWebRequestBackground",
    "clipboardWrite",
    "blocking",
    "cookies",
    "<all_urls>"
  ],
  "host_permissions": ["https://live.kuaishou.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "js": ["content.js"],
      "matches": ["https://live.kuaishou.com/*"]
  }],
  "declarative_webRequest": {
    "rules": [
      {
        "id": "getCookieRule",
        "conditions": [
          {
            "url": {
              "hostSuffix": "live.kuaishou.com",
              "queryContains": "liveStreamId="
            }
          }
        ],
        "actions": [
          {
            "type": "SendMessageToExtension",
            "message": {
              "action": "getCookie"
            }
          }
        ]
      }
    ]
  }
}